<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".schActivity"
android:orientation="vertical"
android:id="@+id/schLayout"
android:layout_margin="10dp">

<ImageView
    android:id="@+id/imageView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/ic_launcher_foreground"
    android:layout_weight="4"/>

<TextView
    android:id="@+id/textView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:textSize="20pt"
    android:text="서촌 그 책방"
    android:textAlignment="center"
    android:textStyle="bold"/>

<TextView
    android:id="@+id/textView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:textSize="10pt"
    android:textAlignment="center"
    android:text="책마다 적힌 코멘트가 돋보이는 책방" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:textSize="8pt"
    android:textAlignment="center"
    android:text="책방지기님이 직접 읽어보시고 추천하시는 책들로 이루어진 공간" />

<TextView
    android:id="@+id/textView4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:textSize="8pt"
    android:textAlignment="center"
    android:text="서울 종로구 자하문로5가길 30-1" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:gravity="center">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메인으로 돌아가기" />

    <Button
        android:id="@+id/instaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인스타그램 방문하기"/>
</LinearLayout>

</LinearLayout>